<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mis.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textMIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-thin"
        android:text="MIS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <Button
        android:id="@+id/cmd_POIs"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmdTUG"
        android:layout_centerHorizontal="true"
        android:text="POIs" />

    <Button
        android:id="@+id/cmd_eat"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmd_POIs"
        android:layout_centerHorizontal="true"
        android:text="Eat it" />

    <Button
        android:id="@+id/cmd_drink"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmd_eat"
        android:layout_centerHorizontal="true"
        android:text="Drink it" />

    <Button
        android:id="@+id/cmd_buy"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmd_drink"
        android:layout_centerHorizontal="true"
        android:text="Buy it" />

    <Button
        android:id="@+id/cmdTUG"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cmd_POIs"
        android:layout_below="@+id/txt_map"
        android:layout_marginTop="17dp"
        android:text="TUG" />

    <TextView
        android:id="@+id/txt_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textMIS"
        android:layout_below="@+id/textMIS"
        android:fontFamily="sans-serif-thin"
        android:text="Map your way through..."
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>